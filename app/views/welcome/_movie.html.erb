<div class="movie">
  <div class="movie_photo">
    <% img_url = movie.img_path ? "https://image.tmdb.org/t/p/w500#{movie.img_path}" : "https://www.themoviedb.org/assets/2/v4/glyphicons/basic/glyphicons-basic-38-picture-grey-c2ebdbb057f2a7614185931650f8cee23fa137b93812ccb132b9df511df1cfac.svg" %>
    <%= image_tag img_url, sizes: "(max-width: 479px) 100vw, 750px" %>
  </div>
  <div class="movie_info">
    <div class="movie_info-score"><%= movie.score.round(1) %></div>
    <div class="movie_info-name"><%= movie.title %></div>
    <div class="movie_info-date"><%= movie.release_date&.strftime('%b %d, %Y') %></div>
  </div>
</div>
